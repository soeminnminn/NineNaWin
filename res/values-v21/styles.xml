<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 21+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 21+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- API 21 theme customizations can go here. -->
        <item name="android:colorPrimary">@color/app_color_primary</item>
        <item name="android:colorPrimaryDark">@color/app_color_primary_dark</item>
        <item name="android:colorAccent">@color/app_color_accent</item>
        
        <!-- <item name="android:textColorPrimary">@android:color/white</item> -->
    </style>
    
    <style name="ActionButton" parent="@android:style/Widget.Material.ActionButton">
        <item name="android:layout_width">@dimen/action_bar_default_height</item>
	    <item name="android:layout_height">@dimen/action_bar_default_height</item>
    </style>

</resources>
