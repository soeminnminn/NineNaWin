<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SlidingUpTabDrawer">
        <!-- Identifier for the child that represents the drawer's handle. -->
        <attr name="sudHandle" format="reference" />
        <!-- Identifier for the child that represents the drawer's content. -->
        <attr name="sudContent" format="reference" />
        <!-- Extra offset for the handle at the bottom of the SlidingDrawer. -->
        <attr name="sudBottomOffset" format="dimension"  />
        <!-- Extra offset for the handle at the top of the SlidingDrawer. -->
        <attr name="sudTopOffset" format="dimension"  />
        <!-- Indicates whether the drawer should be opened/closed with an animation
             when the user clicks the handle. Default is true. -->
        <attr name="sudAnimateOnClick" format="boolean" />
        <attr name="sudRightTab" format="boolean" />
        <attr name="sudBackgroundColor" format="color" />
    </declare-styleable>

</resources>