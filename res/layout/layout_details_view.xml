<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:orientation="vertical" >
    
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1dip" />

    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <LinearLayout 
            android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingStart="@dimen/detail_content_horizontal_margin"
    		android:paddingLeft="@dimen/detail_content_horizontal_margin"
    		android:paddingEnd="@dimen/detail_content_horizontal_margin"
    		android:paddingRight="@dimen/detail_content_horizontal_margin"
    		android:paddingBottom="@dimen/detail_content_vertical_margin"
    		android:clipToPadding="false"
		    android:orientation="vertical" >
            
            <TextView
		        android:id="@+id/textDetailDesc"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:text="@string/app_name"
		        android:textColor="@color/black"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		    
		    <TextView
		        android:id="@+id/textDetailSubTitle"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="@dimen/detail_content_vertical_padding"
		        android:background="@drawable/detail_header_background"
		        android:ems="10"
		        android:text="@string/app_name"
		        android:textColor="@color/detail_subheader_text_color"
		        android:textStyle="bold"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		    
		    <TextView
		        android:id="@+id/textDetailSubDesc"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="@dimen/detail_content_vertical_padding"
		        android:ems="10"
		        android:text="@string/app_name"
		        android:textColor="@color/black"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		    
        </LinearLayout>
        
    </ScrollView>

</LinearLayout>
