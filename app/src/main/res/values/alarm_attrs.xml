<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    
    <declare-styleable name="TextTime">
        <!-- Specifies the formatting pattern used to show the time and/or date
             in 12-hour mode. Please refer to {@link android.text.format.DateFormat}
             for a complete description of accepted formatting patterns.
             The default pattern is "h:mm a". -->
        <attr name="format12Hour" format="string"/>
        <!-- Specifies the formatting pattern used to show the time and/or date
             in 24-hour mode. Please refer to {@link android.text.format.DateFormat}
             for a complete description of accepted formatting patterns.
             The default pattern is "H:mm". -->
        <attr name="format24Hour" format="string"/>
   </declare-styleable>
   
    <!-- Style -->
    <style name="AlarmAlertTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="AlarmAlertFullScreenTheme" parent="android:Theme.Holo.Wallpaper.NoTitleBar">
    </style>
    
    <!-- Dimen -->
    <dimen name="alarm_side_padding">12dip</dimen>
    <dimen name="alarm_clock_vertical_margin">12dip</dimen>
    
    <dimen name="alarm_time_font_size">64sp</dimen>
    <dimen name="alarm_time_text_size">120dip</dimen>
    <dimen name="alarm_ampm_text_size">20dip</dimen>
    
    <dimen name="alarm_collapse_expand_height">72dip</dimen>
    <dimen name="alarm_hairline_height">1dip</dimen>
    
    <dimen name="alarm_touch_target_min_size">48dip</dimen>
    
    <dimen name="alarm_label_size">14sp</dimen>
    <dimen name="alarm_label_left_padding">6dip</dimen>
    <dimen name="alarm_label_edit_margin">16dip</dimen>
    
    <!-- Strings -->
    <string name="alarm_default_label">Alarm</string>
    <string name="alarm_repeat">Repeat</string>
    <string name="alarm_vibrate">Vibrate</string>
    
    <!-- Repeat options that appear under an alarm on main Alarm Clock
         screen to identify repetition schedule: special case for when
         the alarm is set to repeat every day -->
    <string name="alarm_every_day">Every day</string>
    
    <!-- Repeat options that appear under an alarm on main Alarm Clock
         screen to identify repetition schedule: concatenate days with
         this character, i.e. "Mon, Tue, Wed" -->
    <string name="alarm_day_concat">", "</string>

    <!-- Repeat options that appear under an alarm on main Alarm Clock
         screen to identify repetition schedule: special case for when
         the alarm is set to never repeat -->
    <string name="alarm_never">Never</string>
    
    <!-- Accessibility labels for alarm buttons -->
    <string name="alarm_ringtone_description">Ringtone</string>
    
    <string name="alarm_alert">Alarm Ringtone</string>
    <string name="alarm_ringtone">Ringtone</string>
    <string name="alarm_tomorrow">Tomorrow</string>
    <string name="alarm_today">Today</string>
    
    <string name="alarm_enable">Turn alarm on</string>
    <string name="alarm_disable">Turn alarm off</string>
    
    <string name="alarm_expand">Expand alarm</string>
    <string name="alarm_collapse">Collapse alarm</string>
    
    <!-- Summary for the alarm preference when silent is chosen. -->
    <string name="alarm_silent_summary">Silent</string>
    
    <string name="alarm_alert_dismiss_text">Dismiss</string>
    <string name="alarm_alert_snooze_text">Snooze</string>
    <string name="alarm_notify_text">Select to snooze or dismiss this alarm.</string>
    <string name="alarm_alert_snooze_set">Snoozing for <xliff:g id="minutes">%d</xliff:g> minutes.</string>
    <string name="alarm_alert_alert_silenced">Alarm silenced after <xliff:g id="minutes">%d</xliff:g> minutes</string>
    <string name="alarm_notify_snooze_label"><xliff:g id="label">%s</xliff:g> (snoozed)</string>
    <string name="alarm_notify_snooze_text">Alarm set for <xliff:g id="time">%s</xliff:g>. Select to cancel.</string>
    
    <!-- format strings for clocks -->
    <string name="alarm_time_24_hours_format" translatable="false">kk&#58;mm</string>
    <!-- Font size for AM/PM should match alarm_label_size -->
    <string name="alarm_time_12_hours_format" translatable="false">h&#58;mm&#8202;<b><font size="24" face="sans-serif">a</font></b></string>
    
    <!-- Colors -->
    <color name="alarm_blackish_selected">#0cffffff</color>
    <color name="alarm_clock_white">#ffffff</color>
    <color name="alarm_clock_gray">#77000000</color>
    <color name="alarm_hairline">#28ffffff</color>
    <color name="alarm_hairline_light">#30000000</color>
    <color name="alarm_white">#ffffffff</color>

    <!-- Alarm confirmation toast: singular day -->
    <string name="alarm_day">"1 day"</string>

    <!-- Alarm confirmation toast: plural days -->
    <string name="alarm_days">"<xliff:g id="days">%s</xliff:g> days"</string>

    <!-- Alarm confirmation toast: singular hour -->
    <string name="alarm_hour">1 hour</string>

    <!-- Alarm confirmation toast: plural hours -->
    <string name="alarm_hours"><xliff:g id="hours">%s</xliff:g> hours</string>

    <!-- Alarm confirmation toast: singular minute  -->
    <string name="alarm_minute">"1 minute"</string>

    <!-- Alarm confirmation toast: plural minutes  -->
    <string name="alarm_minutes">"<xliff:g id="minutes">%s</xliff:g> minutes"</string>

   <!-- Alarm confirmation toast: Describes how long from now until alarm fires -->
   <string-array name="alarm_set">
     <item>Alarm set for less than 1 minute from now.</item>
     <item>Alarm set for <xliff:g id="DAYS" example="2 days">%1$s</xliff:g> from now.</item>
     <item>Alarm set for <xliff:g id="HOURS" example="2 hours">%2$s</xliff:g> from now.</item>
     <item>Alarm set for <xliff:g id="DAYS" example="2 days">%1$s</xliff:g> and <xliff:g id="HOURS" example="2 hours">%2$s</xliff:g> from now.</item>
     <item>Alarm set for <xliff:g id="MINUTES" example="2 minutes">%3$s</xliff:g> from now.</item>
     <item>Alarm set for <xliff:g id="DAYS" example="2 days">%1$s</xliff:g> and <xliff:g id="MINUTES" example="2 minutes">%3$s</xliff:g> from now.</item>
     <item>Alarm set for <xliff:g id="HOURS" example="2 hours">%2$s</xliff:g> and <xliff:g id="MINUTES" example="2 minutes">%3$s</xliff:g> from now.</item>
     <item>Alarm set for <xliff:g id="DAYS" example="2 days">%1$s</xliff:g>, <xliff:g id="HOURS" example="2 hours">%2$s</xliff:g>, and <xliff:g id="MINUTES" example="2 minutes">%3$s</xliff:g> from now.</item>
   </string-array>
    
</resources>
